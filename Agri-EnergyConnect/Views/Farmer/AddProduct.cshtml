@model Product
@{
    ViewData["Title"] = "Add New Product";
}

<div class="container mt-4">
    <h2>Add New Product</h2>
    <hr>

    <div class="row">
        <div class="col-md-6">
            <form asp-action="AddProduct">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group mb-3">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Category" class="control-label"></label>
                    <input asp-for="Category" class="form-control" />
                    <span asp-validation-for="Category" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="ProductionDate" class="control-label"></label>
                    <input asp-for="ProductionDate" class="form-control"
                           type="date"
                           min="@DateTime.Now.AddYears(-10).ToString("yyyy-MM-dd")"
                           max="@DateTime.Now.ToString("yyyy-MM-dd")" />
                    <span asp-validation-for="ProductionDate" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-save"></i> Save Product
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}