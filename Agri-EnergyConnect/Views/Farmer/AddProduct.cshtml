@model Agri_EnergyConnect.Models.Product
@{
    ViewData["Title"] = "Add Product";
}

<div class="container">
    <h2>Add New Product</h2>

    <!-- Improved validation summary -->
    <div class="alert alert-danger @(ViewData.ModelState.IsValid ? "d-none" : "")">
        <h5>Please fix these errors:</h5>
        <div asp-validation-summary="All"></div>
    </div>

    <form asp-action="AddProduct" method="post">
        <div class="form-group mb-3">
            <label asp-for="Name" class="form-label"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger small"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="Category" class="form-label"></label>
            <input asp-for="Category" class="form-control" />
            <span asp-validation-for="Category" class="text-danger small"></span>
        </div>

        <div class="form-group mb-4">
            <label asp-for="ProductionDate" class="form-label"></label>
            <input asp-for="ProductionDate" type="date" class="form-control"
                   max="@DateTime.Now.ToString("yyyy-MM-dd")" />
            <span asp-validation-for="ProductionDate" class="text-danger small"></span>
        </div>

        <button type="submit" class="btn btn-success">Add Product</button>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        // Set default date to today
        document.addEventListener('DOMContentLoaded', function() {
            const dateInput = document.querySelector('#ProductionDate');
            if (dateInput && !dateInput.value) {
                dateInput.value = new Date().toISOString().split('T')[0];
            }
        });
    </script>
}