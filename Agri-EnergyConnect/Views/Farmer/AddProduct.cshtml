@model Agri_EnergyConnect.Models.Product
@{
    ViewData["Title"] = "Add Product";
}

<div class="container">
    <h2>Add New Product</h2>

    <!-- Simplified validation summary (only shows when needed) -->
    <div asp-validation-summary="All" class="alert alert-danger @(ViewData.ModelState.IsValid ? "d-none" : "")"></div>

    <form asp-action="AddProduct" method="post">
        <div class="form-group mb-3">
            <label asp-for="Name" class="form-label"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger small"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="Category" class="form-label"></label>
            <input asp-for="Category" class="form-control" />
            <span asp-validation-for="Category" class="text-danger small"></span>
        </div>

        <div class="form-group mb-4">
            <label asp-for="ProductionDate" class="form-label"></label>
            <input asp-for="ProductionDate" type="date" class="form-control"
                   max="@DateTime.Now.ToString("yyyy-MM-dd")" />
            <span asp-validation-for="ProductionDate" class="text-danger small"></span>
        </div>

        <button type="submit" class="btn btn-success">Add Product</button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        // Set default date to today (simplified)
        document.addEventListener('DOMContentLoaded', () => {
            const dateInput = document.getElementById('ProductionDate');
            if (dateInput && !dateInput.value) {
                dateInput.valueAsDate = new Date();
            }
        });
    </script>
}