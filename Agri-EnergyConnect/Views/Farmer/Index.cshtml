@model List<Product>
@{
    ViewData["Title"] = "Farmer Dashboard";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8">
            <h1 class="display-4">Welcome Farmer!</h1>
            <p class="lead">Manage your agricultural products here</p>
        </div>
        <div class="col-md-4 text-end">
            <a asp-action="AddProduct" class="btn btn-success">
                <i class="bi bi-plus-circle"></i> Add New Product
            </a>
        </div>
    </div>

    <hr>

    @if (Model.Any())
    {
        <div class="row row-cols-1 row-cols-md-3 g-4">
            @foreach (var product in Model)
            {
                <div class="col">
                    <div class="card h-100 shadow-sm">
                        <div class="card-body">
                            <h5 class="card-title">@product.Name</h5>
                            <h6 class="card-subtitle mb-2 text-muted">@product.Category</h6>
                            <p class="card-text">
                                <small class="text-muted">
                                    Produced: @product.ProductionDate.ToString("d")
                                </small>
                            </p>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-info">
            You haven't added any products yet. Click "Add New Product" to get started!
        </div>
    }
</div>