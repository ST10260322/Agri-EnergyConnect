@model Agri_EnergyConnect.Models.FarmerProductsViewModel
@{
    ViewData["Title"] = "Select Farmer";
}

<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-header bg-success text-white">
            <h2 class="mb-0">Select Farmer</h2>
        </div>
        <div class="card-body">
            <div class="list-group">
                @foreach (var farmer in Model.Farmers)
                {
                    <a asp-action="ViewFarmerProducts"
                       asp-route-farmerId="@farmer.Id"
                       class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                        <span>
                            @farmer.Name @farmer.Surname <small class="text-muted">(@farmer.Email)</small>
                        </span>
                        <i class="fas fa-chevron-right"></i>
                    </a>
                }
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .list-group-item:hover {
            background-color: #f8f9fa;
        }
    </style>
}