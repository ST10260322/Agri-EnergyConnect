@model Agri_EnergyConnect.Models.FarmerProductsViewModel
@{
    ViewData["Title"] = "ViewFarmerProducts";
}

<h1>Products for @Model.Farmers.FirstOrDefault(f => f.Id == Model.SelectedFarmerId)?.Name</h1>

<div class="row mb-3">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header bg-success text-white">
                <div class="d-flex justify-content-between align-items-center">
                    <h5>Filter Products</h5>
                    <a asp-action="SelectFarmer" class="btn btn-light btn-sm">Change Farmer</a>
                </div>
            </div>
            <div class="card-body">
                <form method="get" asp-action="ViewFarmerProducts" asp-route-farmerId="@Model.SelectedFarmerId">
                    <div class="row">
                        <div class="col-md-3">
                            <div class="form-group">
                                <label asp-for="ProductFilter.Category" class="control-label"></label>
                                <select asp-for="ProductFilter.Category" class="form-control"
                                        asp-items="@(new SelectList(Model.ProductFilter.Categories))">
                                    <option value="">All Categories</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label asp-for="ProductFilter.StartDate" class="control-label">From Date</label>
                                <input asp-for="ProductFilter.StartDate" type="date" class="form-control" />
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label asp-for="ProductFilter.EndDate" class="control-label">To Date</label>
                                <input asp-for="ProductFilter.EndDate" type="date" class="form-control" />
                            </div>
                        </div>
                        <div class="col-md-3 d-flex align-items-end">
                            <div class="form-group">
                                <button type="submit" class="btn btn-success">Filter</button>
                                <a asp-action="ViewFarmerProducts" asp-route-farmerId="@Model.SelectedFarmerId"
                                   class="btn btn-outline-secondary ml-2">Reset</a>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@if (Model.ProductFilter.Products.Any())
{
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="thead-dark">
                <tr>
                    <th>Product Name</th>
                    <th>Category</th>
                    <th>Production Date</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var product in Model.ProductFilter.Products)
                {
                    <tr>
                        <td>@product.Name</td>
                        <td>@product.Category</td>
                        <td>@product.ProductionDate.ToString("d")</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="alert alert-info">
        No products found matching your criteria.
    </div>
}

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const today = new Date().toISOString().split('T')[0];
            if (!document.getElementById('ProductFilter_EndDate').value) {
                document.getElementById('ProductFilter_EndDate').value = today;
            }

            if (!document.getElementById('ProductFilter_StartDate').value &&
                document.getElementById('ProductFilter_EndDate').value) {
                const endDate = new Date(document.getElementById('ProductFilter_EndDate').value);
                const startDate = new Date(endDate);
                startDate.setDate(startDate.getDate() - 30);
                document.getElementById('ProductFilter_StartDate').value = startDate.toISOString().split('T')[0];
            }
        });
    </script>
}