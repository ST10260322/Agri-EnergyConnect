@{
    ViewData["Title"] = "Agricultural Connect";
}

<!-- Hero Section -->
<section class="hero-section bg-success bg-gradient text-white py-5">
    <div class="container py-5">
        <div class="row align-items-center">
            <div class="col-lg-6">
                <h1 class="display-4 fw-bold mb-4">Connecting Farmers & Energy Experts</h1>
                <p class="lead mb-4">A digital ecosystem for sustainable agriculture and renewable energy collaboration.</p>
                <div class="d-flex gap-3">
                    <a href="/Account/Register" class="btn btn-light btn-lg px-4">Join Now</a>
                    <a href="#features" class="btn btn-outline-light btn-lg px-4">Learn More</a>
                </div>
            </div>
            <div class="col-lg-6">
                <img src="https://images.unsplash.com/photo-1500382017468-9049fed747ef?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1000&q=80"
                     alt="Farm with solar panels"
                     class="img-fluid rounded shadow-lg">
            </div>
        </div>
    </div>
</section>

<!-- Features Section -->
<section id="features" class="py-5">
    <div class="container py-5">
        <h2 class="text-center mb-5">Our Platform Features</h2>
        <div class="row g-4">
            <div class="col-md-4">
                <div class="card h-100 border-0 shadow-sm">
                    <div class="card-body text-center p-4">
                        <div class="feature-icon bg-success bg-gradient text-white rounded-circle mb-4 mx-auto d-flex align-items-center justify-content-center" style="width: 60px; height: 60px;">
                            <i class="bi bi-people-fill fs-4"></i>
                        </div>
                        <h3 class="h4">Collaboration</h3>
                        <p class="text-muted">Connect with farmers and energy experts to share knowledge and resources.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card h-100 border-0 shadow-sm">
                    <div class="card-body text-center p-4">
                        <div class="feature-icon bg-success bg-gradient text-white rounded-circle mb-4 mx-auto d-flex align-items-center justify-content-center" style="width: 60px; height: 60px;">
                            <i class="bi bi-lightning-charge-fill fs-4"></i>
                        </div>
                        <h3 class="h4">Energy Solutions</h3>
                        <p class="text-muted">Discover renewable energy options tailored for agricultural needs.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card h-100 border-0 shadow-sm">
                    <div class="card-body text-center p-4">
                        <div class="feature-icon bg-success bg-gradient text-white rounded-circle mb-4 mx-auto d-flex align-items-center justify-content-center" style="width: 60px; height: 60px;">
                            <i class="bi bi-graph-up fs-4"></i>
                        </div>
                        <h3 class="h4">Sustainability</h3>
                        <p class="text-muted">Implement eco-friendly practices that increase productivity and reduce costs.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Testimonials -->
<section class="bg-light py-5">
    <div class="container py-5">
        <h2 class="text-center mb-5">What Our Users Say</h2>
        <div class="row g-4">
            <div class="col-md-6">
                <div class="card h-100">
                    <div class="card-body p-4">
                        <div class="d-flex mb-3">
                            <img src="https://randomuser.me/api/portraits/women/32.jpg"
                                 class="rounded-circle me-3"
                                 width="60"
                                 height="60"
                                 alt="User">
                            <div>
                                <h5 class="mb-1">Sarah Johnson</h5>
                                <p class="text-muted mb-0">Farmer</p>
                            </div>
                        </div>
                        <p class="card-text">"This platform helped me find the perfect solar solution for my farm. Reduced my energy costs by 40%!"</p>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card h-100">
                    <div class="card-body p-4">
                        <div class="d-flex mb-3">
                            <img src="https://randomuser.me/api/portraits/men/45.jpg"
                                 class="rounded-circle me-3"
                                 width="60"
                                 height="60"
                                 alt="User">
                            <div>
                                <h5 class="mb-1">Michael Chen</h5>
                                <p class="text-muted mb-0">Energy Consultant</p>
                            </div>
                        </div>
                        <p class="card-text">"Finally a platform where I can directly connect with farmers who need renewable energy solutions."</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Call to Action -->
<section class="py-5 bg-success bg-gradient text-white">
    <div class="container py-5 text-center">
        <h2 class="mb-4">Ready to Join Our Community?</h2>
        <p class="lead mb-4">Thousands of farmers and energy experts are already collaborating.</p>
        <a href="/Account/Register" class="btn btn-light btn-lg px-5">Get Started</a>
    </div>
</section>

@section Styles {
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css" rel="stylesheet">
    <style>
        .hero-section {
            background: linear-gradient(rgba(0, 0, 0, 0.6), rgba(0, 0, 0, 0.6)),
                        url('https://images.unsplash.com/photo-1500382017468-9049fed747ef?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1350&q=80');
            background-size: cover;
            background-position: center;
        }

        .feature-icon {
            transition: transform 0.3s;
        }

        .card:hover .feature-icon {
            transform: scale(1.1);
        }

        .btn-success {
            background-color: #28a745;
            border-color: #28a745;
        }

        .btn-outline-success {
            color: #28a745;
            border-color: #28a745;
        }
    </style>
}